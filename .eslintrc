{
    "extends": "eslint:recommended",
    "env": { 
        "es6": true, 
        "node": true, 
        "browser": true 
      },
    "rules":{
        "no-undef": 2,
        "no-var": 2,
        "no-unused-vars": 2,
        "prefer-const": 2,
        "no-mixed-spaces-and-tabs": 0
    },
    "parserOptions": {
        "ecmaVersion": 2017
    }
}